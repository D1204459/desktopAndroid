<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 背景圖片 -->
    <!-- 替換為你的圖片資源 -->


    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="540dp"
        android:layout_height="476dp"
        android:scaleType="centerCrop"
        android:src="@drawable/thelin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <LinearLayout

        android:layout_width="188dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="線上訂位"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:contentDescription="@string/phone_button_description"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/phone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="107dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:text="地圖資訊"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:contentDescription="@string/map_button_description"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/google_maps" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="189dp"
        android:layout_height="104dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:gravity="center_vertical"
            android:text="餐廳資訊"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="97dp"
            android:layout_height="74dp"
            android:contentDescription="@string/restaurant_button_description"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/restaurant" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>